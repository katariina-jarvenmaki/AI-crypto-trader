{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Crypto Trader Config Schema",
  "type": "object",
  "properties": {
    "testing": {
      "type": "boolean"
    },
    "timezone": {
      "type": "string"
    },
    "paths": {
      "type": "object",
      "properties": {
        "configs": {
          "type": "object",
          "properties": {
            "live": { "type": "string" },
            "test": { "type": "string" }
          },
          "required": ["live", "test"]
        },
        "logs": {
          "type": "object",
          "properties": {
            "live": { "type": "string" },
            "test": { "type": "string" }
          },
          "required": ["live", "test"]
        },
        "schemas": {
          "type": "object",
          "properties": {
            "live": { "type": "string" },
            "test": { "type": "string" }
          },
          "required": ["live", "test"]
        }
      },
      "required": ["configs", "logs", "schemas"]
    },
    "module_filenames": {
      "type": "object",
      "properties": {
        "multi_interval_ohlcv": { "type": "string" }
      },
      "required": ["multi_interval_ohlcv"]
    }
  },
  "required": ["testing", "timezone", "paths", "module_filenames"]
}
